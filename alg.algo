ALGORITHM text-analyse
VAR
    c:CHAR :="";
    nb_char:INTEGER := 0;
    nb_word:INTEGER:=0;
    nb_vow:INTEGER:=0
BEGIN
    WHILE (c <> ".") DO
    read(c)
    nb_char:=nb_char + 1 
IF (c="a" OR c="i" OR c="o" OR c="u" or c="y" or c="e") THEN
    nb_vow:=nb_vow + 1 
END_IF

IF (c=" ") THEN
    nb_word:=nb_word + 1 
END_IF

END_WHILE
write("the length of the sentence is ",nb_char )
write("the nbr of words is  ",nb_word)
write("the nbr of vow is  ",nb_vow)
END